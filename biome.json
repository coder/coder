{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": false
  },
  "linter": {
    "enabled": false
  },
  "json": {
    "parser": {
      "allowComments": true
    }
  },
  "formatter": {
    "ignore": [
      "node_modules/",
      "build/",
      "provisioner/terraform/testdata/",
      "site/out/"
    ],
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "javascript": {
    "formatter": {
      "trailingComma": "all"
    }
  }
}
